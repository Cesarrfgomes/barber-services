generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Expert {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  phone String?
  Queue Queue[]

  @@map("experts")
}

model Queue {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now()) @db.Date()
  expert_id Int
  expert    Expert   @relation(fields: [expert_id], references: [id])

  @@map("queues")
}
